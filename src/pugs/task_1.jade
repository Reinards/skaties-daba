                            span.item_nr 1
                        div( class="item item_2" data-item_id="2") 
                            span.content Pīļu mātīte
                            span.item_nr 2
                    .bottom
                        div( class="img-item img-item_2" data-item_id="2" ) 
                            img( class="img_1_2" src="img/tasks/1/item2.jpg" data-cont="Attēls Pīļu mātīte" )
                            span.img-overlay.img-overlay--hidden
                        div( class="img-item img-item_1" data-item_id="1" ) 
                            img( class="img_1_1" src="img/tasks/1/item1.jpg" data-cont="Attēls Pīļu tēviņš")
                            span.img-overlay.img-overlay--hidden

                    button( class="submit-task" data-task_id="1" ) Turpināt

        .subtask.subtask_2.subtask--hidden
